# Mudrex API Secret (required)
MUDREX_API_SECRET=your_mudrex_api_secret_here

# Margin as % of futures wallet used per position (required - set in Railway)
# e.g. 50 = 50% of available balance
MARGIN_PERCENTAGE=50

# Telegram Notifications (optional but recommended)
# Use comma-separated chat IDs for multiple recipients
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
# TELEGRAM_CHAT_ID=123,456,789

# Optional Configuration
DRY_RUN=false
LOG_LEVEL=INFO
